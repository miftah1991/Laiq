            hintType: 'label',
            animationDuration: 0,
            rtl: true,
            rules: [
            { input: '#PersonalityType', message: 'Required ! ', action: 'blur', rule: function (input) { var val = $("#PersonalityType").val(); if (val == "" || val == 0) { return false; } return true; } },
